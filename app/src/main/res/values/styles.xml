<resources>
    <!-- Bordi arrotondati -->
    <style name="ShapeAppearance.Accordo.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.Accordo.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Accordo.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Accordo.MaterialButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Primary text color of toolbar arrow, text and refresh-->
    <style name="Widget.Accordo.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:drawableTint">?attr/colorPrimaryDark</item>
        <item name="colorControlNormal">?attr/colorPrimaryDark</item>
    </style>

    <style name="Widget.Accordo.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="titleTextColor">?attr/colorPrimaryDark</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.Accordo.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Accordo.MaterialButton</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:drawableTint">?attr/colorOnPrimary</item>
    </style>

    <!-- Important buttons (send) -->
    <style name="Widget.Accordo.SendMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Accordo.MaterialButton</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:drawableTint">?attr/colorOnSecondary</item>
    </style>

    <!-- Attach Button -->
    <style name="Widget.Accordo.AttachMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Post -->
    <style name="Widget.Accordo.PostLinearLayout" parent="">
        <item name="elevation">4dp</item>
    </style>

    <!-- Popup Attach -->
    <style name="Widget.Accordo.PopupWindow" parent="@style/Widget.AppCompat.PopupWindow">
        <item name="android:dropDownHorizontalOffset">-8dp</item>
        <item name="android:dropDownVerticalOffset">8dp</item>
        <item name="elevation">16dp</item>
    </style>

    <!-- Alert Dialog -->
    <style name="MyThemeOverlayAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Accordo.Dialog.Rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.Accordo.Dialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <!-- Bottom sheet dialog -->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- navigation bar bottomsheet dialog -->

</resources>
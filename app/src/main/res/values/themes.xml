<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Accordo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorOnSurface">@color/light_grey</item>
        <item name="colorOnBackground">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Toolbar -->
        <item name="toolbarStyle">@style/Widget.Accordo.Toolbar</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <!-- Stile bottoni -->
        <item name="materialButtonStyle">@style/Widget.Accordo.MaterialButton</item>
        <!-- Popup Attach -->
        <item name="popupMenuStyle">@style/Widget.Accordo.PopupWindow</item>
        <!-- Stile Alert Dialog -->
        <item name="materialAlertDialogTheme">@style/MyThemeOverlayAlertDialog</item>
        <!-- Bottom Sheet Dialog Theme -->
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="ThemeOverlay.Accordo.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>
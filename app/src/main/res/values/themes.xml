<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Accordo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/darkBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lime</item>
        <item name="colorSecondaryVariant">@color/greenLime</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/light_grey</item>
        <item name="colorPrimarySurface">?attr/colorPrimary</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>

        <item name="colorPost">@color/light_grey</item>

        <!-- Status bar and navigation bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="toolbarStyle">@style/Widget.Accordo.Toolbar</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Stile bottoni -->
        <item name="materialButtonStyle">@style/Widget.Accordo.MaterialButton</item>
        <!-- Popup Attach -->
        <item name="popupMenuStyle">@style/Widget.Accordo.PopupWindow</item>
        <!-- Stile Alert Dialog -->
        <item name="materialAlertDialogTheme">@style/MyThemeOverlayAlertDialog</item>
        <!-- Bottom Sheet Dialog Theme -->
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <!-- Stile snackbar -->
        <item name="snackbarStyle">@style/Widget.Accordo.Snackbar</item>
    </style>

    <style name="ThemeOverlay.Accordo.FullscreenContainer" parent="">
    </style>
</resources>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Accordo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryNightColor</item>
        <item name="colorPrimaryVariant">@color/primaryNightDarkColor</item>
        <item name="colorOnPrimary">@color/primaryNightTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryNightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryNightDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryNightTextColor</item>
        <item name="colorOnSurface">@color/dark_grey</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Toolbar -->
        <item name="toolbarStyle">@style/Widget.Accordo.Toolbar</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>
        <!-- Stile bottoni -->
        <item name="materialButtonStyle">@style/Widget.Accordo.MaterialButton</item>
        <!-- Popup Attach -->
        <item name="popupMenuStyle">@style/Widget.Accordo.PopupWindow</item>
        <!-- Stile Alert Dialog -->
        <item name="materialAlertDialogTheme">@style/MyThemeOverlayAlertDialog</item>
        <!-- Bottom Sheet Dialog Theme -->
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="ThemeOverlay.Accordo.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>
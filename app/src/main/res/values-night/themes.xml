<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Accordo" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lilac</item>
        <item name="colorPrimaryVariant">@color/darkLilac</item>
        <item name="colorOnPrimary">@color/greyBlack</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fadedYellow</item>
        <item name="colorSecondaryVariant">@color/darkFadedYellow</item>
        <item name="colorOnSecondary">@color/greyBlack</item>

        <item name="colorSurface">@color/dark_grey</item>
        <item name="colorPrimarySurface">?attr/colorSurface</item>
        <item name="colorOnPrimarySurface">@color/lilac</item>
        <item name="colorPrimaryDark">@color/lilac</item>

        <item name="android:windowBackground">@color/black</item>

        <item name="colorPost">@color/dark_grey2</item>

        <!-- Status bar and navigation color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <!-- Toolbar -->
        <item name="toolbarStyle">@style/Widget.Accordo.Toolbar</item>
        <item name="navigationViewStyle">@style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface</item>


        <!-- Stile bottoni -->
        <item name="materialButtonStyle">@style/Widget.Accordo.MaterialButton</item>
        <!-- Popup Attach -->
        <item name="popupMenuStyle">@style/Widget.Accordo.PopupWindow</item>
        <!-- Stile Alert Dialog -->
        <item name="materialAlertDialogTheme">@style/MyThemeOverlayAlertDialog</item>
        <!-- Bottom Sheet Dialog Theme -->
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <!-- Stile snackbar -->
        <item name="snackbarStyle">@style/Widget.Accordo.Snackbar</item>
    </style>

    <style name="ThemeOverlay.Accordo.FullscreenContainer" parent="">
    </style>
</resources>